<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/myThemeColor</item>
        <item name="colorPrimaryDark">@color/myThemeColor</item>
        <!--colorControlActivated 修改选中的字体后出现的图标颜色-->
        <item name="android:colorControlActivated">@color/myThemeColor</item>
        <!--textColorHighlight 选中字体后背景色-->
        <item name="android:textColorHighlight">@color/myThemeColor</item>
        <!--textCursorDrawable光标的颜色-->
        <item name="android:textCursorDrawable">@color/myThemeColor</item>
        <!--colorAccent按钮选中的颜色-->
        <item name="android:colorAccent">@color/myThemeColor</item>

    </style>

    <style name="myRadioButton">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/radio_button_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1"/>
            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="searchEdittext">
        <attr name="imageWidth" format="dimension"/>
        <attr name="searchTextSize" format="dimension"/>
        <attr name="searchTextColor" format="color"/>
    </declare-styleable>

    <style name="Theme.Start" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_dot1</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
