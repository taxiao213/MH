<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/main_force_shape">

        <RelativeLayout
            android:id="@+id/rl_mian_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/main_force_pop">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="发现新版本"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tv_main_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_main_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rl_mian_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:text="更新内容："
            android:textColor="@color/grey_33"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_main_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_main_update"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="7dp"
            android:textColor="@color/grey_33"
            android:textSize="15dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tv_main_bt"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_main_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/main_but_shape"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="@color/white"
            android:textSize="14dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/tv_main_bt"/>
    </RelativeLayout>

</RelativeLayout>